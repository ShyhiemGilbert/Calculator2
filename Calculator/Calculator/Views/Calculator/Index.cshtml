
@{
    ViewBag.Title = "Index";
}

<h2>Calculator</h2>
<div class="container">
    <div class="row">
        <div class="col-sm-12">
            <input type="text" id="result" />
            <div id="keyPad">
                @* 1st Row *@
                <span id="num7" class="col-sm-3 btn btn-default">7</span>
                <span id="num8" class="col-sm-3 btn btn-default">8</span>
                <span id="num9" class="col-sm-3 btn btn-default">9</span>
                <span id="opDiv" class="col-sm-3 btn btn-default">/</span>
                @* 2nd Row *@
                <span id="num4" class="col-sm-3 btn btn-default">4</span>
                <span id="num5" class="col-sm-3 btn btn-default">5</span>
                <span id="num6" class="col-sm-3 btn btn-default">6</span>
                <span id="opMul" class="col-sm-3 btn btn-default">*</span>
                

                @* 3th Row *@
                <span id="num1" class="col-sm-3 btn btn-default">1</span>
                <span id="num2" class="col-sm-3 btn btn-default">2</span>
                <span id="num3" class="col-sm-3 btn btn-default">3</span>
                <span id="opSub" class="col-sm-3 btn btn-default">-</span>
                
                @* 3th Row *@
                <span id="num0" class="col-sm-3 btn btn-default">0</span>
                <span id="dec" class="col-sm-3 btn btn-default">.</span>
                <span id="opAdd" class="col-sm-3 btn btn-default">+</span>
                <span id="equals" class="col-sm-3 btn btn-default">=</span>
                <span id="clear" class="col-sm-3 btn btn-default">CE</span>
            </div>
        </div>
    </div>
</div>

